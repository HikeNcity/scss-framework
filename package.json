{
	"name": "scss-boilerplate",
	"version": "1.0.0",
	"description": "A SCSS boilerplate using npm scripts.",
	"keywords": [
		"scss",
		"html"
	],
	"author": "Imran Khan",
	"maintainers": [
		{
			"name": "Imran Khan",
			"email": "imransilvake@gmail.com"
		}
	],
	"license": "MIT",
	"scripts": {
		"compile": "./app/code/core/scripts/scss/compile",
		"watch": "./app/code/core/scripts/scss/watch",
		"browser-sync": "browser-sync start --server  --files '**/*.html, dist/css/main.min.css' --port 8080 --browser 'google chrome'",
		"start": "npm run browser-sync & npm run watch"
	},
	"devDependencies": {
		"autoprefixer": "^9.3.1",
		"browser-sync": "^2.26.3",
		"clean-css-cli": "^4.2.1",
		"del-cli": "^1.1.0",
		"gulp": "^4.0.0",
		"node-sass": "^4.10.0",
		"nodemon": "^1.18.6",
		"postcss-cli": "^6.0.1",
		"stylelint": "^9.8.0",
		"stylelint-order": "^1.0.0"
	},
	"dependencies": {
		"font-awesome": "^4.7.0",
		"normalize.css": "^8.0.1"
	}
}
